<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <FrameLayout
            android:id="@+id/flFilms"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/pic_films" />
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="#80000000" />
            
            <TextView
                style="@style/MainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Films" />
        
        </FrameLayout>
        
        <FrameLayout
            android:id="@+id/flPlanets"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/pic_planets" />
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="#80000000" />
            
            <TextView
                style="@style/MainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Planets" />
        
        </FrameLayout>
        
        <FrameLayout
            android:id="@+id/flPersons"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pic_persons" />
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="#80000000" />
            
            <TextView
                style="@style/MainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Persons" />
        
        </FrameLayout>
        
        <FrameLayout
            android:id="@+id/flStarships"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/pic_starships" />
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="#80000000" />
            
            <TextView
                style="@style/MainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Starships" />
        
        </FrameLayout>
        
        <FrameLayout
            android:id="@+id/flVehicles"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/pic_vehicles" />
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="#80000000" />
            
            <TextView
                style="@style/MainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Vehicles" />
        
        </FrameLayout>
    
    </LinearLayout>

</ScrollView>
